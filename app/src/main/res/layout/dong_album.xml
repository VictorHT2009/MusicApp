<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearcardviewalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageviewalbum"
            android:scaleType="fitXY"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:text="Ngay nao anh cung nho em"
            android:textSize="20sp"
            android:maxWidth="200dp"
            android:textColor="#000000"
            android:id="@+id/textviewtenalbum"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewtencasialbum"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Lieu rang em co nho anh du chi mot ngay"
            android:textSize="15sp"
            android:textColor="#504d4d"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.v7.widget.CardView>