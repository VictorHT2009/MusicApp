<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:id="@+id/imageviewbaihathot"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#363636"
        android:textSize="18sp"
        android:text="Ten bai hat"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewbaihathot"
        android:id="@+id/textviewbaihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewtencasibaihathot"
        android:layout_below="@+id/textviewbaihathot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewbaihathot"
        android:singleLine="true"
        android:text="Ca si"
        android:textSize="18sp"
        android:textColor="#8c8a8a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/imageviewluotthich"
        android:src="@drawable/iconlove"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>